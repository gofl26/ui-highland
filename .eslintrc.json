{
  "root": true,
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 2,
        "printWidth": 100
      }
    ]
  }
}
